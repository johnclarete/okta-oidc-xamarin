<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Import Project="$(MSBuildThisFileDirectory)Xamarin.Messaging.targets" Condition="Exists('$(MSBuildThisFileDirectory)Xamarin.Messaging.targets')" />
	<Import Project="$(MSBuildThisFileDirectory)Xamarin.iOS.Local.targets" Condition="Exists('$(MSBuildThisFileDirectory)Xamarin.iOS.Local.targets')" />
	<PropertyGroup>
		<!-- Allows to delete the entire build directory for the app in the mac 
        It means that all session-id based generated directories will be deleted
        Specially useful for CI builds where the user wants to clean previous builds
    -->
		<RemoveAppDir Condition="'$(RemoveAppDir)' == ''">false</RemoveAppDir>
		<CleanDependsOn>
			$(CleanDependsOn);
			_CleanMacBuild;
		</CleanDependsOn>
	</PropertyGroup>
	<Target Name="_CleanMacBuild" DependsOnTargets="_SayHello">
		<RemoveDir SessionId="$(BuildSessionId)" Condition="'$(MtouchTargetsEnabled)' == 'true'" Directories="$(OutputPath);$(IntermediateOutputPath)" RemoveAppDir="$(RemoveAppDir)" ContinueOnError="true" />
	</Target>
</Project>